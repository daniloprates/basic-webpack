{
  "name": "basic-webpack-project",
  "version": "1.0.0",
  "description": "Basic Webpack Project",
  "main": "index.js",
  "scripts": {
    "start-complete": "npm-run-all --parallel test:watch scripts lint",
    "start": "npm-run-all --parallel scripts lint",
    "lint": "esw src --color --watch",
    "scripts": "webpack-dev-server --port 3000 --host 0.0.0.0 --config ./webpack.config.js --mode development --content-base src --inline --no-info --quiet --colors",
    "style": "node-sass src/style/style.scss dist/style.css -w",
    "style:build": "node-sass src/style/style.scss dist/style.css -w",
    "test": "mocha --compilers js:@babel/core/register ./src/scripts/**/*.spec.js",
    "test:watch": "npm run test -- --watch",
    "build": "webpack --config webpack.build.config.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/daniloprates/basic-webpack-project.git"
  },
  "author": "Danilo Prates <daniloprates@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.0.0-beta.42",
    "@babel/preset-env": "7.0.0-beta.42",
    "@babel/preset-es2015": "7.0.0-beta.42",
    "autoprefixer": "8.2.0",
    "axios": "0.18.0",
    "babel-loader": "8.0.0-beta.2",
    "clean-webpack-plugin": "^0.1.14",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "0.28.11",
    "eslint": "4.19.1",
    "eslint-plugin-import": "2.10.0",
    "eslint-watch": "3.1.4",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.1.0",
    "i": "0.3.6",
    "jeet": "^7.1.0",
    "json-loader": "^0.5.4",
    "mocha": "5.0.5",
    "node-sass": "4.8.3",
    "npm": "5.8.0",
    "npm-run-all": "^4.1.2",
    "postcss-loader": "2.1.3",
    "resolve-url-loader": "2.3.0",
    "sass": "1.1.1",
    "sass-loader": "6.0.7",
    "slm-loader": "^0.2.3",
    "style-loader": "^0.20.3",
